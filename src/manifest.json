{
    "manifest_version": 2,

    "name": "Morale Dex",
    "description": "",
    "version": "0.0.0.1",
    "minimum_chrome_version": "48",
    "offline_enabled": true,
    "author": "Morale Dex Team",

    "permissions": [
        "*://*.workdaysuv.com/*"
    ],

    "content_scripts": [
        {
            "matches": ["https://*.workdaysuv.com/*"],
            "js": [
                "lib/jquery-3.1.0.min.js",
                "content.js"
            ],
            "css": [
                "css/global.css",
                "css/content.css"
            ],
            "run_at": "document_idle"
        }
    ],

    "web_accessible_resources": [
        "sandbox.html",
        "images/gears.svg",
        "images/default/-2.png",
        "images/default/-1.png",
        "images/default/0.png",
        "images/default/1.png",
        "images/default/2.png",
        "images/basic/-2.png",
        "images/basic/-1.png",
        "images/basic/0.png",
        "images/basic/1.png",
        "images/basic/2.png",
        "images/thumbs/-2.png",
        "images/thumbs/-1.png",
        "images/thumbs/0.png",
        "images/thumbs/1.png",
        "images/thumbs/2.png"
    ],
    
    "sandbox": {
        "pages": ["sandbox.html"],
        "content_security_policy": "sandbox allow-scripts; script-src https://maps.googleapis.com"
    }
}
